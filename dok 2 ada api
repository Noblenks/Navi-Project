    "name": "PT Dockyard Surabaya",
    "rating": 4.7
  }
}
```

### Lampiran B: Smart Contract Examples
```solidity
// Fundraising Smart Contract
pragma solidity ^0.8.0;

contract NaviFundraising {
    struct Campaign {
        string campaignId;
        address shipOwner;
        uint256 targetAmount;
        uint256 currentAmount;
        uint256 deadline;
        bool active;
        mapping(address => uint256) investments;
    }
    
    mapping(string => Campaign) public campaigns;
    mapping(string => address[]) public campaignInvestors;
    
    event CampaignCreated(string indexed campaignId, uint256 targetAmount);
    event InvestmentMade(string indexed campaignId, address investor, uint256 amount);
    event FundsReleased(string indexed campaignId, uint256 amount);
    
    function createCampaign(
        string memory _campaignId,
        uint256 _targetAmount,
        uint256 _duration
    ) external {
        require(campaigns[_campaignId].targetAmount == 0, "Campaign already exists");
        
        Campaign storage newCampaign = campaigns[_campaignId];
        newCampaign.campaignId = _campaignId;
        newCampaign.shipOwner = msg.sender;
        newCampaign.targetAmount = _targetAmount;
        newCampaign.deadline = block.timestamp + _duration;
        newCampaign.active = true;
        
        emit CampaignCreated(_campaignId, _targetAmount);
    }
}
```

### Lampiran C: Database Schema Design
```sql
-- Campaigns Table
CREATE TABLE campaigns (
    id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
    campaign_id VARCHAR(50) UNIQUE NOT NULL,
    ship_id VARCHAR(50) NOT NULL,
    owner_id VARCHAR(50) NOT NULL,
    target_amount DECIMAL(15,2) NOT NULL,
    current_amount DECIMAL(15,2) DEFAULT 0,
    status VARCHAR(20) DEFAULT 'pending',
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- Investments Table  
CREATE TABLE investments (
    id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
    campaign_id VARCHAR(50) REFERENCES campaigns(campaign_id),
    investor_address VARCHAR(42) NOT NULL,
    amount DECIMAL(15,2) NOT NULL,
    transaction_hash VARCHAR(66) NOT NULL,
    sto_tokens_issued DECIMAL(15,2) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- STO Tokens Table
CREATE TABLE sto_tokens (
    id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
    token_id VARCHAR(50) UNIQUE NOT NULL,
    campaign_id VARCHAR(50) REFERENCES campaigns(campaign_id),
    current_holder VARCHAR(42) NOT NULL,
    amount DECIMAL(15,2) NOT NULL,
    dividend_claimed DECIMAL(15,2) DEFAULT 0,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
```

